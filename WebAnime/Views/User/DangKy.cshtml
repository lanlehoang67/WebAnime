@model WebAnime.Models.NguoiDung

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/GiaoDienNguoiDungLayout.cshtml";
}

<h2>Đăng Ký Tài Khoản</h2>

